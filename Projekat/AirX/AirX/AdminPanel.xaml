<Page
    x:Class="AirX.AdminPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AirX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView 
        x:Name="NavView"
        Grid.RowSpan="2" 
        VerticalAlignment="Stretch"
    >



        <NavigationView.MenuItems >

            <NavigationViewItemSeparator/>
            <NavigationViewItemSeparator/>

            <NavigationViewItemHeader Content="Admin controls"/>
            <NavigationViewItem x:Uid="HomeNavItem" Content="Search users" Tag="home" Tapped="Navigate">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE10F;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem x:Uid="AppsNavItem" Icon="Globe" Content="Add users" Tag="discover" Tapped="Navigate" />
            <NavigationViewItem x:Uid="GamesNavItem" Icon="Map" Content="View users" Tag="book"/>
            <NavigationViewItem x:Uid="MusicNavItem" Icon="Audio" Content="View database" Tag="vipclub"/>

            <NavigationViewItemSeparator/>
            <NavigationViewItemSeparator/>

        </NavigationView.MenuItems>

        <NavigationView.HeaderTemplate >
            <DataTemplate >
                <Grid Margin="24,10,0,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                        FontSize="28"
                        VerticalAlignment="Center"
                        Text="Welcome"/>
                    <CommandBar Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
                        <AppBarButton Label="Refresh" Icon="Refresh"/>
                        <AppBarButton Label="Login" Icon="OtherUser" Click="OnLoginClick"/>
                    </CommandBar>
                </Grid>
            </DataTemplate>
        </NavigationView.HeaderTemplate>


        <Frame x:Name="ContentFrame" Margin="24" >

            <Frame.ContentTransitions>

                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>

    </NavigationView>
</Page>
